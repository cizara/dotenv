!URxvt settings
!--[Title]--!
URxvt*title:           urxvtc
URxvt*termName:        rxvt-unicode
URxvt*cursorBlink:     true
URxvt*urgentOnBell:    true

!--[Fonts]--!
URxvt*font:         	xft:Bitstream Vera Sans Mono:pixelsize=20:antialias=false
URxvt.font:         	xft:Bitstream Vera Sans Mono:pixelsize=20:antialias=false
URxvt.italicFont:	    xft:Bitstream Vera Sans Mono:italic:autohint=true:antialias=true
URxvt.boldFont:		    xft:Bitstream Vera Sans Mono:bold:autohint=true:antialias=true
URxvt.boldItalicFont:	xft:Bitstream Vera Sans Mono:bold:italic:autohint=true:antialias=true
!URxvt*font:		    xft:Iosevka:pixelsize=20:hinting=true
!URxvt.font:		    xft:Iosevka:pixelsize=20:hinting=true
!URxvt.italicFont:	    xft:Iosevka:pixelsize=20:style=Italic:hinting=true
!URxvt.boldFont:		xft:Iosevka:pixelsize=20:style=Bold:hinting=true
!URxvt.boldItalicFont:	xft:Iosevka:pixelsize=20:style=Bold Italic:hinting=true
URxvt.underlineColor:   yellow
URxvt.scrollBar:        false

!--[Urxvt Options]--!
URxvt.boldMode:         false
URxvt.imLocale:         en_US.UTF-8
URxvt.loginShell:       true
URxvt.saveLines:        65536
URxvt.inheritPixmap:    true
URxvt.borderless:       true
URxvt.jumpScroll:       true
URxvt.tintColor:        white
URxvt.internalBorder:   0
URxvt.cursorBlink:      false
URxvt.cursorColor:      #dd9900
URxvt.cursorColor2:     #000000
!URxvt.background:       #222222
URxvt.foreground:       #ddccbb
URxvt.colorBD:          #ffffff
URxvt.colorIT:          #bbbbbb
URxvt.colorUL:          #999999
!URxvt.underlineColor:   #999999
URxvt*saveLines:        512
URxvt*depth:            32
!URxvt*background:      rgba:0000/0000/0200/c800
URxvt*background:       rgba:02f0/04f0/04f0/cccc
URxvt*transparent:      true
!URxvt*shading:         36

!--[Colours]--!
! color schema source: http://terminal.sexy/
! special
*.foreground:          #d0d0d0
*.background:          #151515
*.cursorColor:         #d0d0d0
! black
*.color0:              #151515
*.color8:              #505050
! red
*.color1:              #ac4142
*.color9:              #ac4142
! green
*.color2:              #90a959
*.color10:             #90a959
! yellow
*.color3:              #f4bf75
*.color11:             #f4bf75
! blue
*.color4:              #6a9fb5
*.color12:             #6a9fb5
! magenta
*.color5:              #aa759f
*.color13:             #aa759f
! cyan
*.color6:              #75b5aa
*.color14:             #75b5aa
! white
*.color7:              #d0d0d0
*.color15:             #f5f5f5

URxvt*clipboard.copycmd:    xclip -i -selection clipboard
URxvt*clipboard.pastecmd:   xclip -o -selection clipboard
URxvt.resize-font.smaller:  C-Down
URxvt.resize-font.bigger:   C-Up
URxvt.letterSpace:          0
Xft.dpi:	                96
Xft.lcdfilter:              lcddefault

#define WINDOWGEOMETRY 90x20
! xterm
xterm*dynamiccolors:      true
xterm*utf8:               2
xterm*geometry:           WINDOWGEOMETRY
xterm*visualBell:         off
xterm*highlightSelection: true
!xterm*background:        lightblack
!xterm*foreground:        lightblue
xterm*colorMode:          on
!xterm*colorBD:           lightcyan
!xterm*colorBDMode:       on
!xterm*colorUL:           white
!xterm*colorULMode:       on
!xterm*scrollTtyOutput:   false
!xterm*scrollKey:         true
!xterm*scrollBar:         true

XTerm*renderFont:         true
XTerm*faceName:           VeraMono
XTerm*faceSize:           10
