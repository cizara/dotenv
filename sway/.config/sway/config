exec_always echo "sway config trace: starting sway at $(date)"

bar {
  swaybar_command waybar
}

#font pango, FontAwesome, 14
font Roboto 15

include $HOME/.config/sway/bindsym
include $HOME/.config/sway/for_window
include $HOME/.config/sway/exec

# Output configuration
output eDP-1 scale 1

output eDP-1 bg `sway_wallpaper` fill
output DP-1 bg `sway_wallpaper` fill position 0 0

# Input configuration
input "1739:33571:1A586757:00_06CB:8323_Touchpad" {
  tap enabled
  natural_scroll enabled
}

input "3141:20484:SONiX_USB_DEVICE_Keyboard" {
  xkb_layout us
  xkb_variant altgr-intl
  xkb_options compose:menu
}
input "3141:20484:SONiX_USB_DEVICE" {
  xkb_layout us
  xkb_variant altgr-intl
  xkb_options compose:menu
}
input "5426:562:Razer_Razer_Blade_Stealth_Keyboard" {
  xkb_layout us
  xkb_variant altgr-intl
  xkb_options compose:menu
}

input "1267:9081:ELAN_Touchscreen" map_to_output eDP-1

include /etc/sway/config.d/*
